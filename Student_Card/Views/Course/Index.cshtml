@model IEnumerable<Student_Card.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<div class="w-100 card border-0">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Course List</h1>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Course" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Add New Course
                </a>
            </div>
        </div>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.CourseName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.CourseCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseDescription)
                    </th>
                    <th>
                        Actions

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CourseCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseDescription)
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Course" asp-action="Update" asp-route-Id="@item.ID" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square">Update</i>
                                </a>
                                <a asp-controller="Course" asp-action="Details" asp-route-Id="@item.ID" class="btn btn-primary mx-2">
                                    <i class="bi bi-info-circle">Details</i>
                                </a>
                                <a asp-controller="Course" asp-action="Delete" asp-route-Id="@item.ID" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill">Delete</i>
                                </a>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>



</div>
