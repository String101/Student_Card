@model Student

@{
    ViewData["Title"] = "Deleting";
}

<div class="w-100 card border-0">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Delete Course</h1>
            </div>
        </div>
    </div>
</div>
<div class="card-body border-4">
    <form method="post" class="row">
        <div class="p-3">
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Course.CourseName" disabled class="form-control" />
                <label asp-for="Course.CourseName" class="ms-2"></label>

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Title" disabled class="form-control" />
                <label asp-for="Title" class="ms-2"></label>

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Initials" disabled class="form-control" />
                <label asp-for="Initials" class="ms-2"></label>

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Surname" disabled class="form-control" />
                <label asp-for="Surname" class="ms-2"></label>

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Student_Number" disabled class="form-control" />
                <label asp-for="Student_Number" class="ms-2"></label>

            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-6">
                    <input type="hidden" asp-for="Student_Number" />
                    <button type="submit" class="btn btn-danger w-100" asp-controller="Student" asp-action="Delete">
                        <i class="bi bi-trash-fill"> Delete</i>
                    </button>
                </div>
                <div class="col-6 col-md-6">
                    <a asp-controller="Student" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"> Cancel</i>
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
