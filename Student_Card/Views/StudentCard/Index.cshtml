@model StudentCardVM


@{
    ViewData["Title"] = "Index";
}

<div class="w-100 card border-0">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Student Card List</h1>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="StudentCard" asp-action="Create"  class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Add New Card
                </a>
            </div>
        </div>
       
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Initials</th>
                        <th>Surname</th>
                        <th>Student Number</th>
                        <th>Course</th>
                        <th>Current Year</th>
                        <th>Image</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.StudentCard)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Student.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Student.Initials)</td>
                            <td>@Html.DisplayFor(modelItem => item.Student.Surname)</td>
                            <td>@Html.DisplayFor(modelItem => item.Student.Student_Number)</td>
                            <td>@Html.DisplayFor(modelItem => item.Student.Course.CourseName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Year)</td>
                            <td>
                                <img src="@item.ImageUrl" width="150px" height="100px"
                                     style="border-radius: 5px; border: 1px solid #bbb9b9" />
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                <a class="btn btn-primary" asp-action="" asp-route-id="@item.Id"><i class="bi bi-check-circle"> Print</i></a>
                            <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"> Update</i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        
        
</div>
