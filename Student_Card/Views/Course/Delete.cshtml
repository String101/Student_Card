@model Student_Card.Models.Course


<div class="w-100 card border-0">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Delete Course</h1>
            </div>
        </div>
    </div>
</div>
<div class="card-body border-4">
    <form method="post" class="row">
        <div class="p-3">
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.CourseName" disabled class="form-control" />
                <label asp-for="CourseName" class="ms-2"></label>

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.CourseCode" disabled class="form-control" />
                <label asp-for="CourseCode" class="ms-2"></label>

            </div>
            <div class="form-floating py-2 col-12">
                <textarea asp-for="CourseDescription" disabled class="form-control" style="height: 200px" rows="4"></textarea>
                <label asp-for="CourseDescription" class="ms-2"></label>

            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-6">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash-fill"> Delete</i>
                    </button>
                </div>
                <div class="col-6 col-md-6">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"> Cancel</i>
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>


