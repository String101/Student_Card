@model Student_Card.Models.Course

@{
    ViewData["Title"] = "Update";
}

<div class="w-100 card border-0">
    <div class="card-header bg-info bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Update Course</h1>
            </div>
        </div>
    </div>
</div>
<div class="card-body border-4">
    <form asp-action="Update">
        <div class="p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-floating py-2 col-12">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <label asp-for="CourseCode" class="control-label"></label>
                <input asp-for="CourseCode" class="form-control" />
                <span asp-validation-for="CourseCode" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <label asp-for="CourseDescription" class="control-label"></label>
                @* <textarea asp-for="CourseDescription" class="form-control" /> *@
                <textarea asp-for="CourseDescription" class="form-control" style="height: 200px" rows="4"></textarea>
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-6">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-pencil-square"> Update</i>
                    </button>
                </div>
                <div class="col-6 col-md-6">
                    <a asp-controller="Course" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"> Cancel</i>
                    </a>
                </div>
            </div>
        </div>

    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
